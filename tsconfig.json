    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "ignoreDeprecations": "6.0",

    /* Configuração de caminhos redundante para suporte a ferramentas legadas */
