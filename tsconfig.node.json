{
  "compilerOptions": {
    /* Cache de compilação específico para o ambiente Node */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* Configuração de Target moderna para ferramentas de build */
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"], // Permite o uso de path, __dirname e outras APIs nativas do Node
    "skipLibCheck": true,

    /* Estratégia de Resolução (Modo Bundler) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Regras de Rigor e Qualidade (Consistente com a App) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  /* Escopo: Apenas arquivos de configuração do ecossistema Vite */
  "include": ["vite.config.ts"]
}
